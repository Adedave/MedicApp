@model List<EnrolleeModel>

@{
    ViewData["Title"] = "Enrollees";
    Layout = "_EnrolleeDataLayout";
}
<partial name="_LoginPartial" />
<div class="form-actions right">
    <a class="btn btn-default  " href="@Url.Action("Index", "User")"><i class="fa fa-times"></i>Perform another search </a>
</div>
<div class="text-center">
    <div class="portlet-body">
        <div class="table-toolbar">
            <p>
                We have @Model.Count() Enrollees who are @ViewBag.Query in @ViewBag.Lga between
                        @ViewBag.StartDate and @ViewBag.EndDate
            </p>
        </div>



        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr>
                    <th>
                        S/N
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Height
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        LGA
                    </th>
                    <th>
                        Diseases
                    </th>
                </tr>
            </thead>

            <tbody>
                @{int i = 0;}
                @{ foreach (var item in Model)
                    {
                        <tr>
                            <td>

                                @{++i;}
                                @i
                            </td>
                            <td>
                                @item.Age
                            </td>
                            <td>
                                @item.Gender
                            </td>
                            <td>
                                @item.Height
                            </td>
                            <td>
                                @item.Weight
                            </td>
                            <td>
                                @item.LGA
                            </td>
                            <td>
                                @*@{var str = "  ";}
                                    @foreach (var disease in item.Diseases)
                                    {

                                        str += disease.DiseaseName + ",  ";

                                    }
                                    @str*@
                            </td>
                        </tr>
                    } }
            </tbody>
        </table>


    </div>
    

</div>
<div class="form-actions right">
    <a class="btn btn-default  " href="@Url.Action("Index", "User")"><i class="fa fa-times"></i>Perform another search </a>
</div>
