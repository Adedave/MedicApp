@model IEnumerable<EnrolleeModel>

@{
    ViewData["Title"] = "Enrollees";
    Layout = "";
}
<a class="btn btn-default  " href="@Url.Action("Index", "User")"><i class="fa fa-times"></i>Perform another search </a>
<div class="text-center">
    <div class="portlet-body">
        <div class="table-toolbar">

        </div>



        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr>
                    <th>
                        S/N
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Height
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        LGA
                    </th>
                    <th>
                        Diseases
                    </th>
                </tr>
            </thead>

            <tbody>
                @{int i = 0;}
                @{ foreach (var item in Model)
                    {
                <tr>
                    <td>

                        @{++i;}
                        @i
                    </td>
                    <td>
                        @item.Age
                    </td>
                    <td>
                        @item.Gender
                    </td>
                    <td>
                        @item.Height
                    </td>
                    <td>
                        @item.Weight
                    </td>
                    <td>

                        @item.LGA
                    </td>
                    @{ foreach (var disease in item.Diseases)
                        {
                            <tr>
                                <td>
                                    @disease.DiseaseName
                                </td>
                            </tr>
                        }
                    }

                </tr>
                } }
            </tbody>
        </table>


    </div>


</div>

<a class="btn btn-default  " href="@Url.Action("Index", "User")"><i class="fa fa-times"></i>Perform another search </a>
